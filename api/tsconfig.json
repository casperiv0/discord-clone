{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "sourceMap": true,

    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "baseUrl": ".",
    "paths": {
      "hooks/*": ["./src/hooks/*"],
      "lib/*": ["./src/lib/*"],
      "utils/*": ["./src/utils/*"],
      "schemas/*": ["./src/schemas/*"],
      "types/*": ["./src/types/*"],
      "structures/*": ["./src/structures/*"],
      "services/*": ["./src/services/*"]
    }
  }
}
